pipeline { 
  agent any 
    tools { 
      maven 'Maven3' // Use the Maven tool configured in Jenkins 
} 
stages { 
  stage('Checkout') { 
    steps {
      git 'https://github.com/user/maven-project.git'
  } 
    } 
  stage('Build') {
    steps {
      bat 'mvn clean package'
  }
  } 
  stage('Test') {
    steps {
  bat 'mvn test'
}
}
stage('Deploy') {
steps {
echo 'Deploying application...'
}
} 
}
post {
  success {
    echo 'Build and Test Passed! ğŸ‰'
  }
  failure {
    echo 'Build Failed! ğŸš¨' 
  } 
  }
}
